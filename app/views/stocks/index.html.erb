<%= render 'shared/navbar' %>
<div class="container">
  <div class="row" >
    <div id="stock-index-content">
      <div>
        <h3>Welcome to stocks Market</h3>
      </div>
      <div>
        <p>Here you can find your next investiment!</p>
      </div>
    </div>
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <% @stocks.each do |stock| %>
          <div class="card-info">
            <div class="card-content">
              <h5>Name:</h5> <p><%= link_to stock.name, stock_path(stock) %></p>
            </div>
            <div class="card-content">
              <h5>Price:</h5> <p><%= stock.price %></p>
            </div>
            <div class="card-content">
              <h5>Variation:</h5> <p><%= stock.variation %></p>
            </div>
          </div>
        <% end %>
      </div>
  </div>
</div>
