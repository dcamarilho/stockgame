  <%= f.error :user_insuficient_credit %>

  <div class="form-inputs">
    <%= f.input :quantity%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-outline-primary'%>
  </div>
<% end %> -->

