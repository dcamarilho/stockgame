<%= render 'shared/navbar' %>
<div class="container">
  <div class="row" >
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div id="show-stocks">
        <div class="card-grande-header">
          <div class="header-info">
            <h4><%= @stock.name %></h4>
            <%= image_tag("", height: "30", width: "30") %>
          </div>
          <div class="stock-info">
            <div>
              <%= image_tag("icons8-expensive-price-48(1).png", height: "30", width: "30") %>
              <%= @stock.price %>
            </div>
            <div>
              <%= @stock.variation %>
            </div>
          </div>
        </div>
      </div>
      <div id="show-stocks">
        <div class="card-grande">
          <div class="wallet-info">
            <div class="stock-quantity">
              <h4><%= current_user.wallet[@stock.id.to_s] %></h4>
              <%= image_tag("icons8-gg-48.png", height: "30", width: "30") %>
              </div>
            <div class="stock-invested">
              <%= image_tag("icons8-expensive-price-48(1).png", height: "30", width: "30") %>
              <h4><%= current_user.wallet[@stock.id.to_s] ? @stock.price * current_user.wallet[@stock.id.to_s] : 0 %><h4>
            </div>
          </div>



          <div class="d-flex justify-content-around mr-5 ml-5">
            <div class= "btn btn-success m-3" style="color: white; font-weight: bolder;">
              <%= @stock.price %>
            </div>
            <div class= "btn btn-danger m-3" id="coin-pic" style="color: white; font-weight: bolder;">
              <%= @stock.price %>
            </div>
          </div>
              <div class="d-flex justify-content-center">
            <div class="btn btn-primary btn-block mt-3">
                <div>
                  <%= image_tag("icons8-expensive-price-48(1).png", height: "30", width: "30") %>
                </div>
                 <div id="btn-credits">
                  <%= current_user.credits %>
                 </div>
            </div>
          </div>
          <div class="d-flex justify-content-around m-3">
            <div class="btn btn-warning m-3" style="color: white; font-weight: bolder;">
              Ok
            </div>
          </div>
          <div>
          <%= render 'new_order', stock: @stock, order: @order %>

          <div class="back-x">
            <%= link_to :back, class: "button-x" do %>
              <%= image_tag "https://cdn3.iconfinder.com/data/icons/interface/100/close_button-512.png" %>
            <% end %>
          </div>
        </div>
      </div>


    </div>
  </div>
</div>


