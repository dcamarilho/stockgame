<h1>Stocks#show</h1>

<p>Name: <%= @stock.name %></p>

<p>R$: <%= @stock.price %></p>
<p> Variation: <%= @stock.variation %></p>
<p> Quantity: <%= current_user.wallet[@stock.id.to_s] %></p>
<p> Invested credits: <%= @stock.price * current_user.wallet[@stock.id.to_s]  %></p>
<div class= "btn btn-success">
  <%= @stock.price %>
</div>
<div class= "btn btn-danger">
  <%= @stock.price %>
</div>
<br>
<div class="btn btn-warning mt-3">
  <%= current_user.credits %>
</div>
<br>
<div class="btn btn-info mt-3">
  <%= link_to 'Back', :back %>
</div>
<div class="btn btn-warning mt-3">

</div>
 <%= simple_form_for [@stock, @order] do |f| %>
